import { ThemedText } from '@/components/ThemedText';
import { ThemedView } from '@/components/ThemedView';
import { IconSymbol } from '@/components/ui/IconSymbol';
import React, { useState } from 'react';
import { Alert, ScrollView, StyleSheet, TextInput, TouchableOpacity } from 'react-native';

export default function CreateRequestScreen() {
  const [formData, setFormData] = useState({
    teacherName: '',
    subject: '',
    date: '',
    time: '',
    reason: ''
  });

  const handleSubmit = () => {
    if (!formData.teacherName || !formData.subject || !formData.date || !formData.time || !formData.reason) {
      Alert.alert('Error', 'Please fill in all fields');
      return;
    }

    Alert.alert(
      'Success',
      'Replacement request created successfully!',
      [
        { text: 'OK', onPress: () => {
          // Reset form
          setFormData({
            teacherName: '',
            subject: '',
            date: '',
            time: '',
            reason: ''
          });
        }}
      ]
    );
  };

  const updateFormData = (field: string, value: string) => {
    setFormData(prev => ({ ...prev, [field]: value }));
  };

  return (
    <ScrollView style={styles.container}>
      <ThemedView style={styles.header}>
        <ThemedText type="title">Create Request</ThemedText>
        <ThemedText type="subtitle">Submit a new replacement request</ThemedText>
      </ThemedView>

      <ThemedView style={styles.formContainer}>
        <ThemedView style={styles.inputGroup}>
          <ThemedText style={styles.label}>Teacher Name</ThemedText>
          <TextInput
            style={styles.input}
            value={formData.teacherName}
            onChangeText={(text) => updateFormData('teacherName', text)}
            placeholder="Enter teacher name"
            placeholderTextColor="#999"
          />
        </ThemedView>

        <ThemedView style={styles.inputGroup}>
          <ThemedText style={styles.label}>Subject</ThemedText>
          <TextInput
            style={styles.input}
            value={formData.subject}
            onChangeText={(text) => updateFormData('subject', text)}
            placeholder="Enter subject"
            placeholderTextColor="#999"
          />
        </ThemedView>

        <ThemedView style={styles.inputGroup}>
          <ThemedText style={styles.label}>Date</ThemedText>
          <TextInput
            style={styles.input}
            value={formData.date}
            onChangeText={(text) => updateFormData('date', text)}
            placeholder="YYYY-MM-DD"
            placeholderTextColor="#999"
          />
        </ThemedView>

        <ThemedView style={styles.inputGroup}>
          <ThemedText style={styles.label}>Time</ThemedText>
          <TextInput
            style={styles.input}
            value={formData.time}
            onChangeText={(text) => updateFormData('time', text)}
            placeholder="e.g., 9:00 AM - 10:00 AM"
            placeholderTextColor="#999"
          />
        </ThemedView>

        <ThemedView style={styles.inputGroup}>
          <ThemedText style={styles.label}>Reason</ThemedText>
          <TextInput
            style={styles.input}
            value={formData.reason}
            onChangeText={(text) => updateFormData('reason', text)}
            placeholder="Enter reason for replacement"
            placeholderTextColor="#999"
            multiline
            numberOfLines={3}
            textAlignVertical="top"
          />
        </ThemedView>

        <TouchableOpacity style={styles.submitButton} onPress={handleSubmit}>
          <IconSymbol name="checkmark" size={24} color="white" />
          <ThemedText style={styles.submitButtonText}>Submit Request</ThemedText>
        </TouchableOpacity>
      </ThemedView>
    </ScrollView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#f5f5f5',
  },
  header: {
    padding: 20,
    backgroundColor: '#9C27B0',
    alignItems: 'center',
  },
  formContainer: {
    padding: 20,
  },
  inputGroup: {
    marginBottom: 20,
  },
  label: {
    fontSize: 16,
    fontWeight: 'bold',
    marginBottom: 8,
    color: '#333',
  },
  input: {
    backgroundColor: 'white',
    borderWidth: 1,
    borderColor: '#ddd',
    borderRadius: 8,
    padding: 15,
    fontSize: 16,
    color: '#333',
    elevation: 1,
    shadowColor: '#000',
    shadowOffset: { width: 0, height: 1 },
    shadowOpacity: 0.22,
    shadowRadius: 2.22,
  },
  submitButton: {
    flexDirection: 'row',
    alignItems: 'center',
    justifyContent: 'center',
    backgroundColor: '#9C27B0',
    padding: 15,
    borderRadius: 10,
    marginTop: 20,
    elevation: 3,
    shadowColor: '#000',
    shadowOffset: { width: 0, height: 2 },
    shadowOpacity: 0.25,
    shadowRadius: 3.84,
  },
  submitButtonText: {
    color: 'white',
    marginLeft: 10,
    fontSize: 16,
    fontWeight: 'bold',
  },
});
